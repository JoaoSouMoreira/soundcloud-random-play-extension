{
    "name": "Soundcloud True Random",
    "description": "Plays a random song on a Soundcloud Playlist",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.soundcloud.com/*"
            ],
            "js": [
                "shuffle.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}